<% layout("/layouts/boilerplate") %>
<body>
    <h3>All Listing</h3>   
    <!-- <form method="GET" action="/farmerslistings/new">
        <button>Add new </button>
    </form> -->  
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 ">
<% for(let listing of allListings) { %> 
    <a href="/farmerslistings/<%= listing._id %>" class="listing-link"> 
       <div class="card col">
        <img 
        src="<%= listing.image %>" 
        class="card-img-top"
         alt="farmers_image" 
         style="height:20rem;"
         />
       <div class="card-img-overlay"></div>
        <div class="card-body">
        <p class="card-text">
        <b> <%= listing.name %></b> <br>
            <%= listing.city %><br> 
            <%= listing.state %><br> 
            <%= listing.items %><br> 
            &#8377;<%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %> / kg <br>

         </p>
        </div>
      </div> 
    </a>
<% } %> 
</div>
</body>


